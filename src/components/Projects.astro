---
import { Image } from "astro:assets";
import TechPills from "./TechPills.astro";
import Github from "./icons/Github.astro";
import Web from "./icons/Web.astro";

import nextLogo from "../assets/icons/nextjs_logo.png";
import tsLogo from "../assets/icons/ts_logo.svg";
import tailwindLogo from "../assets/icons/tailwind_logo.svg";
import shadcnLogo from "../assets/icons/shadcn_logo.png";
import fastapiLogo from "../assets/icons/fastapi_logo.png";
import DashboardProyect from "../assets/dashboard_proyect.png";

const DashboardProyectStack = [
  {
    name: "Next.js",
    icon: nextLogo.src,
    bgColor: "bg-black",
    textColor: "text-white",
  },
  {
    name: "TypeScript",
    icon: tsLogo.src,
    bgColor: "bg-blue-500",
    textColor: "text-white",
  },
  {
    name: "TailwindCSS",
    icon: tailwindLogo.src,
    bgColor: "bg-cyan-400",
    textColor: "text-white",
  },
  {
    name: "Shadcn/ui",
    icon: shadcnLogo.src,
    bgColor: "bg-gray-800",
    textColor: "text-white",
  },
  {
    name: "FastAPI",
    icon: fastapiLogo.src,
    bgColor: "bg-emerald-500",
    textColor: "text-white",
  },
];

const btnBase =
  "inline-flex items-center gap-2 px-4 py-2 rounded-lg text-sm transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-background";
const btnDark = `${btnBase} bg-gray-800 text-white hover:bg-gray-700`;
---

<section id="projects" class="scroll-mt-32">
  <h2
    class="text-3xl font-extrabold tracking-tight mb-2 text-slate-300 my-6 text-center"
  >
    Projects
  </h2>

  <div class="mt-6">
    <h3 class="text-2xl font-bold tracking-tight mb-4 text-slate-200">
      SaaS Admin Dashboard
    </h3>

    <a
      href="https://dashboard-sass-admin.vercel.app/"
      target="_blank"
      rel="noopener noreferrer"
      class="block overflow-hidden border border-slate-800"
      aria-label="Open live demo SaaS Admin Dashboard"
    >
      <Image
        src={DashboardProyect}
        alt="Dashboard saas admin project"
        class="transition-transform duration-300 ease-in-out hover:scale-105"
      />
    </a>

    <TechPills techs={DashboardProyectStack} />

    <p class="text-slate-200 mt-4">
      A full-stack admin panel built with Next.js 14 and FastAPI, featuring JWT
      authentication with role-based access control, interactive data
      visualizations, automated testing, and a modern responsive UI. Designed
      for scalability, security, and production readiness.
    </p>

    <div class="flex flex-wrap gap-3 mt-4">
      <a
        href="https://github.com/JuanLu90/dashboard-sass-admin"
        target="_blank"
        rel="noopener noreferrer"
        class={btnDark}
      >
        <Github class="w-5 h-5" />
        <span>GitHub</span>
      </a>

      <a
        href="https://dashboard-sass-admin.vercel.app/"
        target="_blank"
        rel="noopener noreferrer"
        class={`${btnDark} justify-center min-w-[140px] whitespace-nowrap`}
      >
        <Web class="w-5 h-5" />
        <span>Live&nbsp;Demo</span>
      </a>
    </div>
  </div>
</section>
