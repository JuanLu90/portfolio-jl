---
interface Props {
  orientation?: "down" | "up";
  class?: string;
  animate?: "none" | "bounce" | "wave";
}

const {
  orientation = "down",
  class: className = "w-6 h-6",
  animate = "none",
  ...rest
} = Astro.props as Props;

const d = orientation === "down" ? "M19 9l-7 7-7-7" : "M5 15l7-7 7 7";

const animClass =
  animate === "bounce"
    ? "animate-bounce"
    : animate === "wave"
      ? "animate-wave-up"
      : "";
---

<style>
  @keyframes wave-up {
    0%,
    100% {
      transform: translateY(0) scale(1);
    }
    30% {
      transform: translateY(-12%) scale(1.05);
    }
    60% {
      transform: translateY(-6%) scale(0.98);
    }
  }
  .animate-wave-up {
    animation: wave-up 1.2s ease-in-out infinite;
  }
</style>

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width="2"
  class={`${className} ${animClass}`}
  {...rest}
>
  <path stroke-linecap="round" stroke-linejoin="round" d={d}></path>
</svg>
